{
  "version": "1.0.0",
  "name": "untangled-web",
  "description": "A library to build web applications in Untangled platform.",
  "license": "MIT",
  "keywords": [
    "untangledfinance",
    "untangled",
    "typescript",
    "ioc",
    "web"
  ],
  "author": {
    "name": "Untangled Developer",
    "email": "dev@untangled.finance"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/untangledfinance/untangled-web"
  },
  "lint-staged": {
    "*": "bun run format --ignore-unknown"
  },
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "./dist"
  ],
  "scripts": {
    "clean": "test -d ./dist && rm -rf ./dist || test true",
    "build": "bun run clean && bunx tsc --project ./tsconfig.build.json --outDir ./dist",
    "lint": "eslint \"src/**/*.ts\" \"scripts/**/*.ts\" \"tests/**/*.ts\" --fix",
    "lint:check": "eslint \"src/**/*.ts\" \"scripts/**/*.ts\" \"tests/**/*.ts\"",
    "format": "bun run lint && prettier --write \"src/**/*.{ts,js,json}\" \"scripts/**/*.{ts,js,json}\" \"tests/**/*.{ts,js,json}\" \"*.{ts,js,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,js,json}\" \"scripts/**/*.{ts,js,json}\" \"tests/**/*.{ts,js,json}\" \"*.{ts,js,json}\"",
    "precommit": "lint-staged",
    "bump": "bun run ./scripts/bump.ts --name untangled-web --registry registry.npmjs.org",
    "prepare": "bunx husky"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.918.0",
    "@aws-sdk/s3-request-presigner": "^3.918.0",
    "@google-cloud/storage": "^7.17.2",
    "@slack/web-api": "^7.12.0",
    "axios": "^1.13.0",
    "bcryptjs": "^2.4.3",
    "cron": "^3.5.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "8.9.5",
    "pg": "^8.16.3",
    "pino": "^9.14.0",
    "qs": "^6.14.0",
    "redis": "^4.7.1",
    "reflect-metadata": "^0.2.2",
    "typeorm": "^0.3.27"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/bcryptjs": "^2.4.6",
    "@types/bun": "^1.3.1",
    "@types/cors": "^2.8.19",
    "@types/jsonwebtoken": "^9.0.10",
    "@typescript-eslint/eslint-plugin": "^8.32.1",
    "@typescript-eslint/parser": "^8.32.1",
    "eslint": "^9.27.0",
    "eslint-plugin-unused-imports": "^4.1.4",
    "lint-staged": "^15.5.2",
    "prettier": "^3.6.2",
    "typescript": "^5.9.3"
  }
}
