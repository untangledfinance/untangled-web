{
  "include": ["src"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "types": ["node", "bun"],
    "paths": {
      "untangled-web/*": ["./dist/*"],
      "untangled-web": ["./dist"]
    },
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "commonjs",
    "noImplicitOverride": true,
    "esModuleInterop": true,
    "target": "es6",
    "declaration": true,
    "moduleResolution": "node",
    "outDir": "dist",
    "declarationDir": "dist",
    "resolveJsonModule": true
  }
}
